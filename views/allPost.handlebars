<div class="posts">
    {{#each posts}}
    <section class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{User.name}} on {{format_date created_at}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </section>
    {{/each}}
</div>