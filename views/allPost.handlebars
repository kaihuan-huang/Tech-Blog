<div class="container">
  {{#each posts}}
  <div class="row">
    <div class="card">
      <h3>{{title}}</h3>
      <span>{{format_date createdAt}}</span>
       <pre>
        <text class="body">
          {{body}}
        </text>
      </pre>
        <div class="bg-white">
                    <div class="d-flex flex-row fs-12">
                        <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"></i><span class="ml-1">Like</span></div>
                        <div class="like p-2 cursor"><i class="fa fa-commenting-o"></i><span class="ml-1"><a href="/api/comments ">Comments</a></span></div>
                        <div class="like p-2 cursor"><i class="fa fa-share"></i><span class="ml-1">Share</span></div>
                        <div class="like p-2 cursor"><i class="fa fa-wrench"></i><span class="ml-1"><a href="/dashboard/edit/{{id}} "> Update</a> </span></div>
                  
                    </div>
                </div>
    </div>
  </div>
  {{/each}}
</div>
